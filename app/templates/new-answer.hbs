<form>
  <div class="form-group">
    <label for="text">Answer</label>
    {{textarea id="text" row="10" class="form-control" value=text placeholder="Type your answer here."}}
  </div>

  <div class="form-group">
    <label for="author">Author</label>
    {{input id="author" type="text" class="form-control" value=author placeholder="Who are you?"}}
  </div>

  <button class="btn btn-primary btn-sm" {{action "addAnswer"}}>Post your answer</button>
</form>
